<h1>Mein Blog</h1>

<% @blog_posts.each do |blog_post| %>
    <div>
        <h2><%= link_to blog_post.title, blog_post %></h2>

        <% if blog_post.draft? %>

        <% elsif blog_post.scheduled? %>
            <div class="p-2 rounded bg-gray-100 text-gray-900">Entwurf</div>
        <% end %>
            <div class="p-2 rounded bg-blue-100 text-blue-900">Entwurf</div>
        <%= blog_post.content %>
    </div>
<% end %>